			name: 'Critical',
			colorByPoint: true,
			data: [{
				name: '>5',
				y: parseFloat('@ViewData["ResponseTime_Critical1"]'),
				color: '#d43f3a',
				sliced: true,
				selected: true
			}, {
				name: '<=5 (mins)',
					y: parseFloat('@ViewData["ResponseTime_Critical2"]'),
