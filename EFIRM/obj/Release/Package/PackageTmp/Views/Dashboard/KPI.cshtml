        plotOptions: {
            column: {
                depth: 25
            }
        },
        yAxis: [{ // Primary yAxis
            labels: {
                format: '{value}',
                style: {
                    color: Highcharts.getOptions().colors[1]
                }
            },
            title: {
                text: null

            }
        }],
        exporting: {
            buttons: {
                contextButton: {
                    menuItems: [
                        'printChart',
                        'separator',
                        'downloadPNG',
                        'downloadJPEG',
                        'downloadPDF',
                        'downloadSVG',
                        'separator',
                        'downloadCSV',
                        'downloadXLS'
                    ]
                }
            }
        },
        tooltip: {
            shared: true,
            formatter: function () {
                return this.points.reduce(function (s, point) {
                    return s + '<br/>' + point.series.name + ': ' +
                        point.y + ' avg. minutes';
                }, '<b>' + this.x + '</b>');
            }
        },
        credits: {
            enabled: false
		}
		,
		legend: {
			enabled: true,
			align: 'center',
			verticalAlign: 'bottom',
			y: 0,
			padding: 0,
			itemMarginTop: 0,
