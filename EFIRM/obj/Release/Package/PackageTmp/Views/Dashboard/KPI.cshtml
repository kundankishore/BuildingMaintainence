				y: parseFloat('@ViewData["RectifyTime_Critical1"]'),
				color: '#d43f3a',
				sliced: true,
				selected: true
			}, {
				name: '<=30 (mins)',
					y: parseFloat('@ViewData["RectifyTime_Critical2"]'),
			}]
		}]
	});


      	Highcharts.chart('container8', {
		chart: {
			plotBackgroundColor: null,
			plotBorderWidth: null,
			plotShadow: false,
			type: 'pie'
		},
		title: {
			text: 'Rectification Time- Urgent'
		},

		tooltip: {
