@model EFIRM.Models.ResetPasswordViewModel

@{
	ViewBag.Title = "Change Password";
	Layout = "~/Views/Shared/_DashBoardLayout.cshtml";
}

@using (Html.BeginForm("ChangePassword", "Settings", FormMethod.Post))
{

	@Html.AntiForgeryToken()

<div class="form-horizontal">
	<h4>Change Password</h4>
	<hr />
	@if (!string.IsNullOrEmpty(ViewBag.Error))
	{
		<div class="error_div" style="color:red;">
			<p style="color:red;">@ViewBag.Error</p>
		</div>
	}
	@if (!string.IsNullOrEmpty(ViewBag.Success))
	{
		<div class="error_div" style="color:green;">
			<p style="color:red;">@ViewBag.Success</p>
		</div>
	}
	@Html.ValidationSummary(true, "", new { @class = "text-danger" })
	<div class="row">
		<div class="form-group col-md-6">
			@Html.Label("Enter Old Password", htmlAttributes: new { @class = "control-label col-md-4" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.OldPassword, new { htmlAttributes = new { @class = "form-control", required = "required" } })
				@Html.ValidationMessageFor(model => model.OldPassword, "", new { @class = "text-danger" })
			</div>
		</div>
	</div>
	<div class="row">
		<div class="form-group col-md-6">
			@Html.Label("Create New Password", htmlAttributes: new { @class = "control-label col-md-6" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", required = "required" } })
				@Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
			</div>
		</div>
	</div>
	<div class="row">
		<div class="form-group col-md-6">
			@Html.Label("Confirm New Password", htmlAttributes: new { @class = "control-label col-md-6" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control", required = "required" } })
				@Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
			</div>
		</div>
	</div>

	<div class="form-group">
		<div class="col-md-offset-2 col-md-10">
			<input type="submit" value="Change Password" class="btn btn-default" />
		</div>
	</div>
</div>
}
<script type="text/javascript">
	$(document).ready(function () {
		$('#CP').addClass("active");
		$('label').css("font-weight", "Bold");
	});
</script>  